<div class="container">
	<%= form_for :event do |f| %>
  <p>
    <%= f.label :New_Event %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :Color %><br>
    <%= f.text_field :color %>
  </p>
 
 <p>
 	<%= f.label :Start %>
 	<%= f.text_field :start %>
 </p>

<p>
 	<%= f.label :End %>
 	<%= f.text_field :end %>
 </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', events_path %>
</div>